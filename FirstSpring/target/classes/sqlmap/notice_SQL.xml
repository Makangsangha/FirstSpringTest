<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  <mapper namespace="Notice">
  	 <sql id="boardSearch">
  		<if test="searchType != null and searchType == 'title'">
  				and (botitle like '%'||#{searchWord}||'%')
  		</if>
  		<if test="searchType != null and searchType == 'writer'">
  				and (bowriter like '%'||#{searchWord}||'%')
  		</if>
  		<if test="searchType != null and searchType == 'all'">
  				and (botitle like '%'||#{searchWord}||'%')
  				or  (bowriter like '%'||#{searchWord}||'%')
  		</if>
  	</sql>
  	
  	<select id="allBono" resultType="int">
  		select bono from notice
  	</select>
  	
  	<insert id="insertNotice" parameterType="noticeVO">
  	  	<selectKey keyProperty="boNo" order="BEFORE" resultType="int">
  			select seq_notice.nextval from dual
  		</selectKey>
  		insert into notice
  			(bono, botitle, bocontent, bowriter, bodate)
  		values(
  			#{boNo}, #{boTitle}, #{boContent}, #{boWriter}, sysdate
  		)
  	</insert>
  	
  	<select id="detailNotice" parameterType="int" resultType="noticeVO">
  		select * from notice
  		where bono = #{boNo}
  	</select>
  	
  	<delete id="deleteNotice" parameterType="noticeVO">
  		delete from notice
  		where bono = #{boNo}
  	</delete>
  	
  	<update id="updateNotice" parameterType="noticeVO">
  		update notice
  		set
  			botitle = #{boTitle},
  			bocontent = #{boContent},
  			bodate= sysdate
  		where bono = #{boNo}	
  	</update>
  
    <select id="selectBoardCount" parameterType="pagingVO" resultType="int">
  		select count(bono)
  		from notice
  		where 1=1
  		<include refid="boardSearch"/>
  	</select>
  	
  	<select id="selectBoardList" parameterType="pagingVO" resultType="noticeVO">
		select b.*
		from (
		 	select 
		 		a.*, row_number() over (order by a.bono desc) as rnum
		 	from(
		  		select
		  			bono, botitle, bocontent, bowriter,
		  			to_char(bodate, 'yy-mm-dd hh24:mi:ss') as bodate, bohit
		  		from notice
		  		where 1=1
				<include refid="boardSearch"/>
		  		order by bono desc
		  	) a
		  ) b
		  <![CDATA[
		 	where b.rnum >= #{startRow} and b.rnum <= #{endRow}		
		  ]]>
  	</select>
  	
  	<update id="upHit" parameterType="int">
  		update notice
  		set
  			bohit = bohit + 1
  		where bono = #{boNo}
  	</update>
  	
  </mapper>